MICA_SRC := ../src
CXX := g++
INC	:= -I ${MICA_SRC}
#DEBUG := -DNDEBUG
LTO := -flto
CPPFLAGS := ${LTO} -O3 -std=c++11 ${DEBUG} ${INC} -Wall -Werror \
	-Wno-unused-result -Wno-unused-value -Wno-unused-function -faligned-new

LD := ${CXX} ${LTO}
LDFLAGS := ${LDFLAGS} -lnuma -lpapi -lpthread

APPS := main
all: ${APPS}

src := ${MICA_SRC}/mica/util/config.o \
	${MICA_SRC}/mica/util/cityhash/city_mod.o \
	worker.o main.o

main: ${src}
	${LD} -o $@ $^ ${LDFLAGS}

PHONY: clean
clean:
	rm -f *.o ${src} ${APPS}
